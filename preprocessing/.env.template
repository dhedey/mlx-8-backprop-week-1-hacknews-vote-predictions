# Environment configuration template for batch preprocessor
# Copy this to .env and fill in your database credentials

# Source Database (where to read from)
SOURCE_POSTGRES_HOST=localhost
SOURCE_POSTGRES_PORT=5432
SOURCE_POSTGRES_DB=hackernews_source
SOURCE_POSTGRES_USER=your_user
SOURCE_POSTGRES_PASSWORD=your_password

# Target Database (where to write processed data)
# If not specified, will use the same as source database
TARGET_POSTGRES_HOST=localhost
TARGET_POSTGRES_PORT=5432
TARGET_POSTGRES_DB=hackernews_processed
TARGET_POSTGRES_USER=your_user
TARGET_POSTGRES_PASSWORD=your_password

# For single database setup, use these instead:
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=your_database
POSTGRES_USER=your_user
POSTGRES_PASSWORD=your_password
